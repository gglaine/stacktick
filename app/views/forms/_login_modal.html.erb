<div class="modal fade " id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <div class="text-center">
          <h3>TECHKILLA</h3>
          <%= image_tag('tequila.png', class: "navbar-wagon-logo") %>

        </div>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
              <div class="text-center">
                <h4>Sign in to comment and connect with other readers</h4>
              </div>
            <div class="form-login">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-field-email">
                  <%= f.email_field(:email, placeholder: "Your Email", autofocus: true, class: "form-field") %>
                </div>
                <div class="form-field-password">
                  <%= f.password_field(:password, placeholder: "Your Password", autocomplete: "off")  %>
                </div>
                <% if devise_mapping.rememberable? -%>
                  <div class="field remember-box">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me%>
                  </div>
                <% end -%>
                  <%= f.submit "LOGIN", class: "login-button"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


