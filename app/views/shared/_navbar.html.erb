<div class="navbar-wagon navbar-wagon-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <div id="dots-box">
      <div class="dot" id="top-left"></div>
      <div class="dot" id="top-right"></div>
      <div class="dot" id="btm-right"></div>
      <div class="dot" id="btm-left"></div>
    </div>
    <h1> STACKT:CK</h1>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
    <h5><%= current_user.username %></h5>
      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= current_user.username %>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
    <div class="navbar-signup">
      <%= link_to "Sign-in | Sign-up", "#login", "data-toggle" => "modal"%>
    </div>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "HACKERNEWS", hackernews_path %></li>
        <li><%= link_to "TECHCRUNCH", techcrunches_path %></li>
        <li><%= link_to "TECHMEME", techmemes_path  %></li>
        <li><%= link_to "LE WAGON", wagonposts_index_path %></li>
      </ul>
    </div>
  </div>
</div>

