<h4><i class="fa fa-comment" aria-hidden="true"></i></h4>

  <%= form_for([@article, @article.comments.build], remote: true) do |f| %>

    <%= f.label :pseudo %><br>
    <%= f.text_field :commenter, class: 'comment-form-body' %>

    <%= f.label :commentaire %><br>
    <%= f.text_area :body, class: 'comment-form-body' %>

    <%= f.submit 'Publier', class: 'btn-primary' %>
<% end %>
