<div class="wrapper-grey">
  <div class="container-fluid">
    <div class="row">
      <div class= "col-xs-12 col-md-6 col-md-offset-2 ">
        <h4>Latest</h4>
          <% @articles.each do |article| %>
            <div class="card">
              <div class="text-center text-justify">
                <h1><%= article.title.capitalize %></h1>
                <p>Publi√© le <%= article.created_at.strftime("%d/%m/%Y") %></p>
                <p><%= simple_format article.text.capitalize %></p>
                <div class="show-more">
                  <%= link_to 'Voir en entier', article_path(article) %>
                </div>
                <div class="social-links">
                  <i class="fa fa-facebook"></i>
                  <i class="fa fa-twitter"></i>
                </div>
              </div>
            </div>
          <% end %>
      </div>
      <div class="col-md-4">
        <h4>All articles</h4>
        <% @articles.each do |article| %>
          <div class="card-side">
            <ul>
              <li><h5><%= article.title.capitalize %></h5></li>
            </ul>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
