
<div class="wrapper-green">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8">
        <h3>Latest HackerNews >>></h3>
        <% @articles.each do |article| %>
          <div class="card-article">
            <%= link_to article_path(article) do %>
              <h1><%= article.title.capitalize %></h1>
              <h4><%= article.source %></h4>
            <% end %>
          </div>
        <% end %>
      </div>

    <div class="col-md-4">
      <div class="card" id="maincard" >
        <h3>Search ></h3>
          <form action="" class="navbar-wagon-search">
            <input type="text" class="navbar-wagon-search-input" placeholder="Search articles">
            <button type="submit" class="navbar-wagon-search-btn">
              <i class="fa fa-search"></i>
            </button>
          </form>
        <h3>Find_by source: </h3>
        <h5><%= link_to 'TechMeme', techmemes_path %></h5>
        <h5><%= link_to 'HackerNews', hackernews_path %></h5>
        <h5><%= link_to 'Techcrunch', techcrunches_path %></h5>
        <h5><%= link_to 'Le Wagon', wagonposts_index_path %></h5>
        <h5>StackExchange</h5>
        <h5>GitHub</h5>
        <h5>Reddit</h5>
        <h5>Motherboard</h5>
        <h5>Wired</h5>
      <h3>Popular >>></h3>
        <h5><a href="#">  Most popular</a> . <a href="#">See all</a></h5>
        <% @articles.reverse_each do |article| %>
        <div class="card-article-mini">
          <ul>
            <li>
            <%= link_to article_path(article) do %>
            <div class="text-center">
              <h1><%= article.title.capitalize %> </h1>
              <strong><%= article.publisher %></strong>
              <h5><%= article.created_at.strftime("%d/%m/%Y") %></h5>
            </div>
            <% end %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
