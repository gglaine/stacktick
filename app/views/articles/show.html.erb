<div class="wrapper-grey">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="text-center">
          <h3><%= @article.title %></h3>
          <%= cl_image_tag @article.photo.url(:full_width) %>
          <%= @article.preview %>
          <p><%= simple_format @article.text %></p>
        </div>
        <div class="card-article-share">
          <i class="fa fa-comment-o" aria-hidden="true"></i> <%= @article.comments.count %>
          <i class="fa fa-heart-o" aria-hidden="true"></i>

        </div>
        <div class="share-links">
          <a href="#" class="share-link bg-facebook">
            <i class="fa fa-facebook"></i>
          </a>
          <a href="#" class="share-link bg-twitter">
            <i class="fa fa-twitter"></i>
          </a>
          <a href="#" class="share-link bg-email">
            <i class="fa fa-envelope-o"></i>
          </a>
          <a href="#" class="share-link bg-text">
            <i class="fa fa-mobile"></i>
          </a>
        </div>

        <h4>Commentaires</h4>
         <div class="comments-list">
            <% @article.comments.order('created_at DESC').each do |comment| %>
          <ul>
            <li>
              <div class="pseudo-box">
                <strong><%= comment.commenter %></strong>

              </div>
              <p> <%= comment.body %></p>
            </li>
          </ul>
            <% end %>
        </div>

          <%= render 'comments/form' %>

      </div>
    </div>
  </div>
</div>
