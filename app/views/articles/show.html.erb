    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <div class="text-center">
          <%= link_to 'Retour aux Articles', articles_path %>
          <h3><%= @article.title %></h3>
          <%= image_tag(@article[:photo]) %>
